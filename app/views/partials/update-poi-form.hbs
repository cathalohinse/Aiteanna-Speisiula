<form action="/updatepoi/{{poi._id}}" method="POST">
  <div class="uk-margin">
    <div class="uk-inline uk-width-1-1">
      <span class="uk-form-icon" uk-icon="icon: user"></span>
      <input class="uk-input uk-form-large" type="text" name="name" value="{{poi.name}}">
    </div>
  </div>
  <div class="uk-margin">
    <div class="uk-inline uk-width-1-1">
      <span class="uk-form-icon" uk-icon="icon: location"></span>
      <input placeholder="{{poi.location}}" class="uk-input uk-form-large" type="text" name="location" value="{{poi.location}}">
    </div>
  </div>

  <div class="uk-margin">
    <div class="uk-inline uk-width-1-1">
      <span class="uk-form-icon" uk-icon="icon: image"></span>
      <input placeholder="{{poi.image}}" class="uk-input uk-form-large" type="text" name="image" value="{{poi.image}}">
    </div>
  </div>

  <div class="uk-margin">
    <label class="uk-form-label" for="form-stacked-select">Select Category</label>
    <div class="uk-form-controls">
      <select name="category" class="uk-select" value="{{poi.category}}">
        <option value="{{poi.category.county}},{{poi.category.province}}"></option>
        {{#each categories}}
          <option value="{{county}},{{province}}">{{county}}, {{province}}</option>
        {{/each}}
      </select>
    </div>
  </div>


  <div class="uk-margin">
    <button style="background-color: #653DC2"
            class="uk-button uk-button-primary uk-button-large uk-width-1-1">Update</button>
  </div>
</form>
