<div class="uk-width-expand@m">
  <div style="background-color: #877EB4" class="uk-card uk-card-default uk-width-xlarge uk-card-body uk-box-shadow-large">
    <h3 class="uk-card-title uk-text-center">Type your message here:</h3>
    <form action="/sendmessage" method="POST">
      <div class="uk-margin">
        <div class="uk-inline uk-width-1-1">

          <textarea class="uk-textarea" rows="5" type="text" name="body" placeholder="Type Message here"></textarea>

        </div>
      </div>
      <div class="uk-margin">
        <div class="uk-inline uk-width-1-1">
          <span class="uk-form-icon" uk-icon="icon: mail"></span>
          <input class="uk-input uk-form-large" type="email" name="recipient" placeholder="Enter recipient's email here">
        </div>
      </div>
      <div class="uk-margin">
        <button style="background-color: #653DC2" class="uk-button uk-button-primary uk-button-large uk-width-1-1">Send</button>
      </div>
    </form>
  </div>
</div>
{{> error }}