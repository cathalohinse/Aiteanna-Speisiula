<html lang="en">
<div class="ui raised segment">
    <b><div class="ui five column grid">
    <meta charset="UTF-8">
    <div class="column">
        <div class="ui segment">
            <i class="user huge icon"></i>
            <br>{{member.name}}
        </div>
    </div>
        <div class="column">
          <div class="ui segment">
            {{#if idealBodyWeight}}
